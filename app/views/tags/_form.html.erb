<%= form.fields_for :tags do |t| %>
  <div class="field">
    <%= t.label :name, 'Tag:' %>
    <%= t.text_field :name %>
  </div>
  <% unless t.object.nil? || t.object.new_record? %>
    <div class="field">
      <%= t.label :_destroy, 'Remove:' %>
      <%= t.check_box :_destroy %>
    </div>
  <% end %>
<% end %>