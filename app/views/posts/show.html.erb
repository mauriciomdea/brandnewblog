<div id="main_content" >

	<div id="<%= "post_#{@post.id}" %>" class="posts" >
		
		<p class="notice"><%= flash[:notice] %></p>

		<!-- Header -->
		<h2><%= @post.title %></h2>
		<h6><%= @post.created_at.to_s(:date_en) %> by <%= @post.author %></h6>	

		<!-- Excerpt -->
		<p style="font-style: italic;"><%= @post.excerpt.html_safe %></p>

		<!-- Content text -->
		<p><%= @post.text.html_safe %><br/></p>
		
		<!-- Tags -->
		<p><span style="font-weight: bold;">tags: </span><%= join_tags(@post.tags).html_safe %></p>
		
		<!-- Social media sharing -->
		<div id="social_sharing" style="margin: 10px 0px 5px 0px; height:25px">
		<div id="google_share" style="float: left; border:none; width:80px;">
			<g:plusone size="medium" href="<%= request.request_uri %>"></g:plusone>
		</div>
		<div id="twitter_share" style="float: left; none; width:120px; height:25px">
			<a href="http://twitter.com/share" class="twitter-share-button" 
				data-count="horizontal" 
				data-text="<%= @post.title %>"
				data-via="brandnewcode" 
				data-lang="en">Tweet</a>
		</div>
		<iframe id="facebook_share" src="http://www.facebook.com/plugins/like.php?href=<%= request.request_uri %>"
		        scrolling="no" frameborder="0" 
		        style="float:left; border:none; width:400px; height:25px"></iframe>
		</div>
		
	</div>
	
</div>

<div id="main_sidebar" >
	
	<%= render "shared/sidebar", :object => @tags %>
	
</div>

<!-- Google Plus One Javascript -->
<script type="text/javascript" src="https://apis.google.com/js/plusone.js">
  {lang: 'pt-BR'}
</script>

<!-- Twitter share Javascript -->
<script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>