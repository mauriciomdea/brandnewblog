<% @post.tags.build %>
<%= form_for(@post) do |f| %>

	<% if @post.errors.any? %>
	<div id="error_box">
	  <% @post.errors.full_messages.each do |msg| %>
	    <p class="error"><%= msg %></p>
	  <% end %>
	</div>
	<% end %>
 
	<div id="form">
		<p class="field">
			<%= f.label :author %>: <%= f.text_field :author, :size => 50 %>
		</p>
		<p class="field">
			<%= f.label :title %>: <%= f.text_field :title, :size => 75 %>
		</p>
		<p class="field">
			<%= f.label :excerpt %>:<br/>
			<%= f.text_area :excerpt, :cols => 75, :rows => 3 %>
		</p>
		<p class="field">
			<%= f.label :text %>:<br/>
			<%= f.text_area :text, :cols => 75, :rows => 11 %>
		</p>
		<p class="field">
			<%= f.label :thumbnail %>: <%= f.text_field :thumbnail, :size => 75 %>
		</p>
		<p class="field">
			<%= f.label :tags %>: <input type="text" name="string_tags" size="50" value="<%= @tags %>"> (separate tags with commas)
		</p>
		<p class="actions">
			<%= f.submit %>
		</p>
	</div>

<% end %>