<div id="main_content">

	<% if @posts.empty? %>
		<h2>No posts found.</h2>
	<% end %>

	<% @posts.each do |post| %>

	<div id="<%= "post_#{post.id}" %>" class="posts" >

		<h2><%= post.title %></h2>
		<h6><%= post.created_at.to_s(:date_en) %> by <%= post.author %></h6>	

		<% if post.thumbnail and !post.thumbnail.empty? %>
			<%= link_to image_tag( post.thumbnail, :class => 'post_thumbnail'), permalink_path(:year => post.year, :month => post.month, :id => post.to_param) %>
		<% end %>

		<p><%= strip_html(post.headline).html_safe  %>&nbsp;<%= link_to 'Read more...', permalink_path(:year => post.year, :month => post.month, :id => post.to_param) %></p>

	</div>
	
	<% end %>
	
</div>

<div id="main_sidebar">

	<%= render :partial => "shared/sidebar", :object => @tags %>
	
</div>
