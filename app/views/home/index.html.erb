<div id="main_content" >

	<% if @posts.empty? %>
		<h2>No posts found.</h2>
	<% end %>

	<% @posts.each do |post| %>

	<div id="<%= "post_#{post.id}" %>" class="posts" >

		<h2><%= post.title %></h2>
		<h6>2007/01/02 by <%= post.author %></h6>	

		<%= link_to image_tag( post.thumbnail, :class => 'post_thumbnail'), { :action => :show, :controller => :posts, :id => post } %>
		
		<!-- <img src="images/lolcode.jpg" style="float: right; margin:0px 0px 10px 10px; border: 1px solid #333333;" width="96" height="128"> -->
		
		<p><%= post.excerpt %>&nbsp;<%= link_to 'Read more...', { :action => :show, :controller => :posts, :id => post } %></p>

	</div>
	
	<% end %>
	
	<!-- <div>
		<h3 id=""><%= link_to 'More >', :action => 'index' %></h3>
	</div> -->
	
</div>

<div id="main_sidebar" >
	
	<%= render "shared/sidebar" %>
	
</div>
